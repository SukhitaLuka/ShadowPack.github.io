.button {
  background-color: #301934;
  color: white;
  padding: 15px 30px;
  border-radius: 10px;
  font-size: 20px;
  font-family: 'Homework', sans-serif;
  box-shadow: 0 0 10px 4px #301934;
  transition: transform 0.3s, background-color 0.3s;
  text-decoration: none;
  display: inline-block;
}

.button:hover {
  transform: scale(1.1); /* Increase the scale to zoom in */
  background-color: #CBC3E3; /* Change to desired color */
}
